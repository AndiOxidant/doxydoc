.docs-content
  .block-item
    position relative
    background-color #eee
    border-radius 7px
    padding 10px
    margin-bottom 10px

  h1
    margin-top 0
    text-transform capitalize

  h2
    margin-top 0
    font-weight normal
    font-size 15px

  h3
    color #333
    font-size 21px
    display inline-block
    vertical-align middle

  h4
    color #000
    font-size 13px
    margin-top 20px

  h5
    color #333
    font-size 12px

  .docs-item-head
    position relative
    margin-top 30px

    .label-version
      position absolute
      right 10px
      top 10px
      display block

    .default
      font-size 14px
      vertical-align middle

      &::before
        content 'Default'
        color #777
        font-size 16px
        padding 0 5px


  .item-description
    font-size 14px
    margin-bottom 20px

    &:first-line
      color #333

    code
      display inline-block
      border 1px solid #c0c0c0
      padding 2px
      color #444

  .type-label
    position absolute
    right 0
    top 0
    background-color #eed
    color #999
    padding 2px 5px
    border-bottom-left-radius 5px

  .return-block
    h4
      display inline-block
    .desc
      display inline-block
      margin-left 10px

  .fires-table
    h5
      margin 0

  .fires-args-table
    counter-reset args
    font-size 14px

    td
      text-align left
      background-color inherit !important

    .arg
      display inline-block

  .preview-block
    margin-bottom 20px

    .css-color-preview
      width 100px
      height 100px
      border-radius 10px
      position relative

    .css-color-name
      position absolute
      left 0
      bottom 36px
      right 0
      text-align center
      display block
      background-color rgba(255, 255, 255, .7)
      line-height 26px
      font-size 18px
      opacity 0
      transition opacity .5s

      &:hover
        opacity 1

    .preview-box
      &.html
        background-color #eee
        border-radius 5px
        padding 5px
        margin-top 20px

  .params-table
    background-color #ddd
    min-width 500px
    font-size 13px
    border-radius 5px
    border-collapse collapse

    thead
      td
        background-color #ccd
        font-size 11px

    td
      padding 3px 5px

  .item-description
    font-size 14px
    margin-bottom 20px

    &:first-line
      color #333

    code
      display inline-block
      border 1px solid #c0c0c0
      padding 2px
      color #444
