@import 'lyssl'

.dd-header
    width 100%
    height 50px
    background-color $blueLagoon
    color #fff
    box-sizing border-box
    padding 10px
    position fixed
    z-index 9999

    .name
        font-size 23px
        display inline-block

    .version
        display inline-block
        font-size 15px
        margin-left 10px

    a.logo-link:link,
    a.logo-link:active,
    a.logo-link:visited
        color #fff
        text-decoration none

    .main-navi
        margin-left 30px
        display inline-block

        .links
            display inline-block

        a:link,
        a:active,
        a:visited
            display inline-block
            background-color rgba(255, 255, 255, .2)
            border-radius 5px
            padding 5px
            text-decoration none
            color #fff
            margin-right 5px

        a:hover
            background-color rgba(255, 255, 255, .4)

    .subtitle
        display inline-block
        margin-left 10px
