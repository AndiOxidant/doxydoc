@import 'lyssl'

/**
 * Sidebar
 * @module sidebar
 */
.dd-sidebar
    width 250px
    position fixed
    left 0
    top 50px
    bottom 0
    background-color #ddd
    padding 10px
    box-sizing border-box
    overflow auto

    .sidebar-navi
        .link-item
            margin 2px 0

        /**
         * Styles a sidebar menu link
         *
         * @class .link
         * @examplehtml}
         * <a class="link" href="#foo">Foo</a>
         */
        .link
            &:link,
            &:visited
                color #111
                text-decoration none
                display inline-block
                padding 2px 5px
                transition background-color .3s
            &:hover
                background-color #0051cd
                color #fff
                border-radius 5px
                transition background-color .3s
            &::before
                content '›'
                margin-right 5px

        .sub-link-list
            margin-left 20px

            .link
                &::before
                    content '•'

    .docs-navi
        .link:link,
        .link:visited,
        .link:active
            display inline-block
            padding 2px 5px
            text-decoration none
            color #555

        .link:hover
            color #333
            background-color #bcb
            border-radius 5px

        .package-link
            lz-octicon(package, 18px, 3px)
            font-size 15px
            font-weight bold

        .module-link
            lz-octicon(gear, 18px, 3px)
            font-size 15px
            font-weight bold

        .group-link
            &:before
                content ''
                width 14px
                height 14px
                display inline-block
                vertical-align middle

            font-weight bold
            font-size 15px

        .content-link
            &:before
                content '›'
                display inline-block
                vertical-align middle
                padding-right 5px

            font-size 13px
