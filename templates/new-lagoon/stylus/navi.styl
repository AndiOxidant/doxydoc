.sidebar-navi
    .link-item
        margin: 2px 0
        
    .link
        &:link,
        &:visible
            color: #111;
            text-decoration: none;
            display: inline-block;
            padding: 2px 5px;
            transition background-color .3s
        &:hover
            background-color: #0051cd;
            color: #fff;
            border-radius: 5px;
            transition background-color .3s
        &::before
            content '›'
            margin-right 5px
            
    .sub-link-list
        margin-left: 20px;
        
        .link
            &::before
                content: '•'
    
