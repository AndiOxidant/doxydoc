.docsItem
    .blockItem
        position relative
        background-color #eee
        border-radius 7px
        padding 10px
        margin-bottom 10px

    h1
        margin-top 0
        text-transform capitalize

    h2
        margin-top 0
        font-weight normal
        font-size 15px

    h3
        color #333
        font-size 21px
        display inline-block
        vertical-align middle

    h4
        color #000
        font-size 13px
        margin-top 20px
        
    h5
        color #333
        font-size 12px
        
.return-block
    h4
        display inline-block
    .desc
        display inline-block
        margin-left 10px
        
.fires-table
    h5
        margin 0
    
    
.fires-args-table
    counter-reset args
    font-size 14px
    
    td
        text-align left
        background-color inherit !important
        
    .arg
        display inline-block
        
.previewBlock
    margin-bottom 20px

    .cssColorPreview
        width 100px
        height 100px
        border-radius 10px
        position relative

    .cssColorName
        position absolute
        left 0
        bottom 36px
        right 0
        text-align center
        display block
        background-color rgba(255, 255, 255, .7)
        line-height 26px
        font-size 18px
        opacity 0
        transition opacity .5s

        &:hover 
            opacity 1
            
    .previewBox
        &.html
            background-color: #eee;
            border-radius: 5px;
            padding: 5px;
            margin-top: 20px;
        